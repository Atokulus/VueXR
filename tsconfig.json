{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "rootDir": "./src",
    "baseUrl": "./src",
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "lib": ["ES6", "DOM", "WebWorker"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
  },
}
